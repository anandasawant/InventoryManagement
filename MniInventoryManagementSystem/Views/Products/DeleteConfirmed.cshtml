@model MiniInventoryManagementSystem.Models.Product

<h1>Delete Product</h1>

<p>Are you sure you want to delete this product?</p>

<ul>
    <li><strong>Name:</strong> @Model.Name</li>
    <li><strong>Price:</strong> @Model.Price</li>
    <li><strong>Stock:</strong> @Model.Stock</li>
</ul>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="/Products">Cancel</a>
</form>
